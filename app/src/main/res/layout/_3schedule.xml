<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="denastya.thermostat.HostActivity$PlaceholderFragment" >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="12  pm"
        android:id="@+id/textView12"
        android:textSize="28dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="45dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#404040" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="6  am"
        android:id="@+id/textView13"
        android:textSize="28dp"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/textView12"
        android:layout_alignRight="@+id/textView12"
        android:layout_alignEnd="@+id/textView12"
        android:paddingTop="8dp"
        android:textColor="#404040" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="add..."
        android:id="@+id/textView14"
        android:textSize="28dp"
        android:layout_gravity="center_horizontal"
        android:paddingTop="8dp"
        android:layout_below="@+id/textView13"
        android:layout_alignRight="@+id/textView13"
        android:layout_alignEnd="@+id/textView13"
        android:textColor="#404040" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="1."
        android:id="@+id/textView15"
        android:textSize="28dp"
        android:layout_gravity="center_horizontal"
        android:layout_alignTop="@+id/textView12"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingLeft="32dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="2."
        android:id="@+id/textView16"
        android:textSize="28dp"
        android:layout_gravity="center_horizontal"
        android:paddingTop="8dp"
        android:layout_below="@+id/textView15"
        android:layout_alignRight="@+id/textView15"
        android:layout_alignEnd="@+id/textView15" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="3."
        android:id="@+id/textView17"
        android:textSize="28dp"
        android:layout_gravity="center_horizontal"
        android:paddingTop="8dp"
        android:layout_alignTop="@+id/textView14"
        android:layout_alignRight="@+id/textView16"
        android:layout_alignEnd="@+id/textView16" />
</RelativeLayout>