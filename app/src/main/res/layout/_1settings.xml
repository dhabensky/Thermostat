<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="denastya.thermostat.HostActivity$PlaceholderFragment" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="22.1"
        android:id="@+id/dayTemp"
        android:textSize="80dp"
        android:textColor="#ff517181"
        android:tag="dayTemp"
        android:layout_below="@+id/textView11"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:clickable="true"
        android:onClick="adjustMode" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="25.4"
        android:id="@+id/nightTemp"
        android:textSize="80dp"
        android:textColor="#ff517181"
        android:tag="nightTemp"
        android:layout_below="@+id/textView10"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:clickable="true"
        android:onClick="adjustMode" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Night mode"
        android:id="@+id/textView10"
        android:textSize="28dp"
        android:textColor="#404040"
        android:layout_marginTop="88dp"
        android:layout_below="@+id/dayTemp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Day mode"
        android:id="@+id/textView11"
        android:textSize="28dp"
        android:textColor="#404040"
        android:layout_marginTop="49dp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="\u00b0"
        android:id="@+id/textView18"
        android:layout_alignTop="@+id/dayTemp"
        android:layout_toRightOf="@+id/dayTemp"
        android:layout_toEndOf="@+id/dayTemp"
        android:textSize="80dp"
        android:textColor="#ff517181" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="\u00b0"
        android:id="@+id/textView19"
        android:textSize="80dp"
        android:layout_alignTop="@+id/nightTemp"
        android:layout_toRightOf="@+id/nightTemp"
        android:layout_toEndOf="@+id/nightTemp"
        android:textColor="#ff517181" />

</RelativeLayout>
